@model IEnumerable<WebApplication2022_Core6_3_6_Dapper.Models2Northwind.Order>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>[Dapper] Index_MultiMapping_Northwind1</title>
</head>
<body>
    <h3>[Dapper] Index_MultiMapping_Northwind1 （Left Join）</h3>
    // Example - Query Multi-Mapping (One to Many)<br />
    // http://dapper-tutorial.net/result-multi-mapping （一對多，北風資料庫）
    <br /><br /><br />

    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId) </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate) </th>
            <th>該訂單的「訂購項目（品項）」</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td bgcolor="pink">
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td bgcolor="pink">
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>

                    <!-- 雙重迴圈（呈現  一對多） -->
                    <!-- *** 這個區域需要自己動手寫 ****************************************************(start) -->
                    <table class="table" border="1">
                        <tr>
                            <th>OrderID</th>
                            <th>ProductID</th>
                            <th>Quantity</th>
                        </tr>

                        @foreach (var item2 in item.Order_Details)
                        {   //                              ****************** 改寫的 重 點！！
                        <tr>
                            <td bgcolor="Aqua">
                                @Html.DisplayFor(modelItem2 => item2.OrderID) 
                                <!--                                              ****************** 改寫的 重 點！！  --> 
                            </td>
                            <td bgcolor="Aqua">
                                @Html.DisplayFor(modelItem2 => item2.ProductID)
                            </td><!--                                         ****************** 改寫的 重 點！！  -->
                            <td bgcolor="Aqua">
                                @Html.DisplayFor(modelItem2 => item2.Quantity) 
                            </td><!--                                         ****************** 改寫的 重 點！！  -->
                        </tr>
                        }
                    </table>
                    <!-- *** 這個區域需要自己動手寫 ****************************************************( end ) -->

                </td>
            </tr>
        }

    </table>
</body>
</html>
